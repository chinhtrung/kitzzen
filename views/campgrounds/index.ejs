<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Tizzen!</h1>
            <p>Simple and Effective, start your online business and spread out your brand today!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Sell new item</a>
            </p>
        </div>
    </header>
    <div class="row " style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(each){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src=<%= each.image %>>
                    <div class="caption">
                        <h3><%= each.name %></h3>
                        <h5><strong>$ <%= each.price %></strong> by <a href="#"> <%= each.author.username %></a></h5>
                        <p><%= each.description.slice(0,100) %></p>
                        <p>
                            <a href="/campgrounds/<%= each._id%>" class="btn btn-primary">More</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>