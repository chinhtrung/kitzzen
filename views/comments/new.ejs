<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Item information</li>
                <li class="list-group-item"><a href="/users/<%= food.author.id %>">Seller information</a></li>
                <li class="list-group-item">Request receipt for points</li>
            </div>
            <div id="map"></div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src=<%= food.image %>>
                <div class="caption-full">
                    <h4 class="pull-right"><strong>$<%= food.price %></strong></h4>
                    <h4><a><%= food.name%></a></h4>
                    <p><%= food.description %></p>
                    <p>
                        <em>Submitted By <a href="/users/<%= food.author.id %>"><%=food.author.username %></a>, <%= moment(food.createdAt).fromNow() %></em>
                    </p>
                    <% if(currentUser && food.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin === true){ %>
                        <a class="btn btn-xs btn-warning" href="/foods/<%= food._id%>/edit">Edit</a>
                        <form class="delete-form" action="/foods/<%= food._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div style="margin-top:10%" class="ui threaded comments">
                <div class="ui dividing header">
                    <h2>Comments</h2>
                </div>
                <% food.comments.forEach(function(comment){%> 
                    <div class="row comment">
                            <a class="avatar">
                                 <img class="header-avatar" src="<%=comment.author.avatar%>">
                            </a>
                            <div class="content">
                                <a class="author" href="/users/<%=comment.author.id%>"><strong><%= comment.author.username %></strong></a>
                                <div class="metadata">
                                    <span class="date"><%= moment(comment.createdAt).fromNow() %></span>
                                </div>
                                <div class="text">
                                    <%= comment.text %>
                                </div>
                                <div class="actions">
                                <% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin === true){ %>
                                    <a class="reply" 
                                        href="/foods/<%= food._id %>/comments/<%=comment._id %>/edit">
                                        Edit
                                    </a>
                                    <form class="delete-form" action="/foods/<%=food._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                        <input type="submit" class="ui mini icon button" value="Delete">
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
                <form class="ui reply form" action="/foods/<%=food._id %>/comments" method="POST">
                    <textarea name="comment[text]" placeholder="Add your comment here ..."></textarea>
                    <button style="margin-top:15px;" class="ui blue labeled submit icon button">
                        <i class="icon edit"></i> Add Comment
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
  function initMap() {
    var lat = <%= food.lat %>;
    var lng = <%= food.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 8,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= food.name %><br />
      <%= food.location %></strong>
      <p><%= food.description %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwEU_CO0VYBQNtOxdlRoMIjAkoKIATabg&callback=initMap"></script>

<% include ../partials/footer %>