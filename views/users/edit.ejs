<% include ../partials/header %>

<form class="ui form" action="/users/<%= currentUser._id %>?_method=PUT" method="POST">
<div class="container">
	<div class="row">
		<div class="ui main text col-md-4">
			<div class="ui massive header" style="margin-top: 20px;">
				Selling list
				<% if(currentUser && currentUser._id.equals(user.id) || currentUser && currentUser.isAdmin === true){ %>
					<div style="margin-top:3.5%;">
						<a class="ui primary basic button" href="/campgrounds/new" style="display:inline-block;"><i class="add square icon"></i> Add New</a>
						<button class="ui brown basic button delete-form"><i class="check square icon"></i> Update profile</button>
					</div>
				<% }; %>
			</div>
			<hr class="style2">
    			<div class="ui top attached left">
    			    <div class="ui divided items">
    			        <% campgrounds.forEach(function(campground){ %>
            			<div class="item">
                			<div class="ui tiny rounded image">
            			        <img src=<%= campground.image %>>
        			        </div>
    			            <div class="content">
        			            <a class="header" href="/campgrounds/<%= campground._id %>"><%= campground.name %></a>
        			            <div class="meta">
            			            <span><%= moment(campground.createdAt).fromNow() %></span>
            			        </div>
                    			<div class="description">
                			        <p><%- campground.description.substring(0,100)%>...</p>
            			        </div>
            			    </div>
        			    </div>
        			    <% }); %>
   				    </div>
    			</div>
		</div>
		<div class="col-md-4">
		    <div class="form-group">
                <label for="firstname">First Name</label>
                <input class="form-control" type="text" name="firstname" id="firstname" value="<%= user.firstName %>">
            </div>
   	        <div class="form-group">
   	            <label for="lastname">Last Name</label>
                <input class="form-control" type="text" name="lastname" id="lastname" value="<%= user.lastName %>">
            </div>
            <div class="form-group">
   	            <label for="avatar">Avatar Url</label>
       	        <input class="form-control" type="text" name="avatar" id="avatar" value="<%= user.avatar%>">
            </div>
            <div class="form-group">
   	            <label for="email">Email</label>
                <input class="form-control" type="email" name="email" id="email" value="<%= user.email %>">
            </div>
            <div class="form-group">
   	            <label for="isadmin">Promotion code</label>
       	        <input class="form-control" type="text" name="isadmin" id="isadmin">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description"><%= user.description%></textarea>
   	        </div>
</form>
   	        <div>
   	        	<a class="ui button" href="/forgot"><i class="undo icon"></i> Change Password</a>
   	        	<a href="/users/<%=user._id%>/edit">Delete account</a>
   	        	<form class="delete-form" action="/users/<%= user._id %>?_method=DELETE" method="POST">
   	        		<div style="margin-top: 10%" class="form-group">
   	        		    <p>Your account and all of your posts will be deleted!</p>
   		    	        <label for="deleteId">Please type in <strong><%= user._id%></strong> to confirm</label>
    		   	        <input class="form-control" type="text" name="deleteId" id="deleteId" placeholder="This action will delete your account permanently">
    		        </div>
      	           <button class="btn btn-xs btn-danger">Delete account</button>
                </form>
   	        </div>
		</div>
	</div>
</div>

<% include ../partials/footer %>